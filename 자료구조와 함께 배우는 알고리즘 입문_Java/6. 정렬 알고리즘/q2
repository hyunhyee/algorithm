import java.util.Scanner;

class BubbleSortEx {

	//--- ë°°ì—´ì˜ ìš”ì†Œ a[idx1]ê³¼ a[idx2]ë¥¼ êµí™˜ ---//
	static void swap(int[] a, int idx1, int idx2) {
		int t = a[idx1]; 
    a[idx1] = a[idx2]; 
    a[idx2] = t;
	}

	//--- ë‹¨ìˆœêµí™˜ì •ë ¬ ---//
	static void bubbleSort(int[] a, int n) {
		int ccnt = 0;			// ë¹„êµ íšŒìˆ˜
		int scnt = 0;			// êµí™˜ íšŒìˆ˜

		for (int i = 0; i < n - 1; i++) {
			System.out.printf("íŒ¨ìŠ¤%d : \n", i + 1);
			
      for (int j = n - 1; j > i; j--) {
				for (int m = 0; m < n - 1; m++)
				
        System.out.printf("%3d %c" , a[m], (m != j-1) ? ' ' :
																			(a[j - 1] > a[j]) ? '+' : '-');
				System.out.printf("%3d\n", a[n - 1]);   â“â“ ì´ê±´ ë­ì§€..

				ccnt++; ğŸš©ë¹„êµ íšŸìˆ˜ +!
				if (a[j - 1] > a[j]) {
					scnt++;  ğŸš©ë¹„êµí•´ì„œ ì™¼ìª½ê°’ì´ ë” í¬ë©´ êµí™˜í•´ì•¼í•˜ë¯€ë¡œ êµí™˜ íšŸìˆ˜ +1
					swap(a, j - 1, j);
				}
			}
			for (int m = 0; m < n; m++)
				System.out.printf("%3d  " , a[m]);
			System.out.println();
		}
		System.out.println("ë¹„êµë¥¼ " + ccnt + "íšŒ í–ˆìŠµë‹ˆë‹¤.");
		System.out.println("êµí™˜ì„ " + scnt + "íšŒ í–ˆìŠµë‹ˆë‹¤.");
	}

	public static void main(String[] args) {
		Scanner stdIn = new Scanner(System.in);

		System.out.println("ë‹¨ìˆœêµí™˜ì •ë ¬(ë²„ë¸” ì •ë ¬)");
		System.out.print("ìš”ì†Ÿìˆ˜ : ");
		int nx = stdIn.nextInt();
		int[] x = new int[nx];

		for (int i = 0; i < nx; i++) {
			System.out.print("x[" + i + "] : ");
			x[i] = stdIn.nextInt();
		}

		bubbleSort(x, nx);				// ë°°ì—´ xë¥¼ ë‹¨ìˆœêµí™˜ì •ë ¬

		System.out.println("ì˜¤ë¦„ì°¨ìˆœìœ¼ë¡œ ì •ë ¬í•˜ì˜€ìŠµë‹ˆë‹¤.");
		for (int i = 0; i < nx; i++)
			System.out.println("x[" + i + "]ï¼" + x[i]);
	}
}

